<?xml version = "1.0" encoding = "utf-8" ?>

<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/loginButtonGradiantStart">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/loginButtonGradiantStart" />
            <corners android:radius="7dp" />
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <gradient
                android:startColor = "@color/loginButtonGradiantEnd"
                android:endColor = "@color/loginButtonGradiantEnd"
                android:angle = "270"
                android:type = "linear" />
            <corners android:radius="7dp" />
        </shape>
    </item>
</ripple>